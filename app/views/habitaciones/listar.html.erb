<h4 class="mb-3">Lista de Habitaciones</h4>
<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th class="text-center">Esta Reservada</th>                
                <th class="text-center">Hotel</th>
                <th class="text-center">Acciones</th>                
            </tr>
            <% @habitaciones.each do |h| %>
            <tr>
                <td> <%= h.id %> </td>
                <td> <%= h.nombre %> </td>
                <td> <%= h.precio %> </td>
                <td class="text-center"> <%= h.esta_reservada %> </td>
                <td> <%= h.hotel.nombre %> </td>
                <td class="text-center"> 
                    <%= link_to "Editar", editar_habitacion_path(h), class: "btn btn-warning" %>
                    <%= link_to "Eliminar", habitacion_path(h), class: 'btn btn-danger', 
                    method: :delete, 
                    data: {confirm: "¿Está seguro que quiere eliminar la Habitación? "} %> </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>