<%= form_with(model: p_ciudad) do |formulario| %>   
    <div class="mb-3">
        <%= formulario.label :nombre, class: "form-label" %>
        <%= formulario.text_field :nombre, class: "form-control" %>
        <% if p_ciudad.errors[:nombre].any? %>
            <div class="alert alert-danger">
                <%= p_ciudad.errors[:nombre].first %>
            </div>
        <% end %>
    </div>
    <div  class="mb-3 text-end">
        <%= link_to 'Cancelar', ciudades_path, class: "btn btn-secondary" %>
        <%= formulario.submit p_texto_boton, class: "btn btn-primary" %>
    </div>
<% end %>