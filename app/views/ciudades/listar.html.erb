<h4 class="mb-3">Lista de Ciudades</h4>
<% if flash[:error_ciudad] %>
    <div class="alert alert-warning" role="alert">
        <%= flash[:error_ciudad] %>
    </div>
<% end %>
<div class="card">
  <div class="card-body">
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th class="text-center">Hoteles</th>
            <th class="text-center">Acciones</th>
        </tr>
        <% @lista_ciudades.each do |c| %>
            <tr>
                <td><%= c.id %></td>            
                <td><%= c.nombre %></td>
                <td class="text-center">
                <% if c.hoteles.any? %>
                    <%= link_to c.hoteles.count, ciudad_path(c) %>
                <% else %>
                    <%= link_to "Registrar Hotel", nuevo_hotel_con_ciudad_path(c), class: 'btn btn-primary text-white'%>
                <% end %>                
                </td>
                <td class="text-center">
                    <%= link_to "Editar", editar_ciudad_path(c), class: "btn btn-warning" %> <!-- /ciudades/4/editar -->
                    <%= link_to "Eliminar", ciudad_path(c), class: "btn btn-danger", 
                    method: :delete, 
                    data: {confirm: "EstÃ¡ seguro que quiere eliminar la Ciudad"} %>
                </td>
            </tr>
        <% end %>
    </table>


  </div>
</div>