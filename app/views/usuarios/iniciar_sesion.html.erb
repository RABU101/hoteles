<div class="row justify-content-center">
    <div class="card w-50">
        <div class="card-body">
            <div class="card-title">
                <% if flash[:error_iniciar_sesion] %>
                    <div class="alert alert-warning" role="alert">
                        <%= flash[:error_iniciar_sesion] %>
                    </div>
                <% end %>
                <h3>Iniciar Sesi√≥n</h3>
            </div>

            <%= form_with() do |formulario| %>

                <div class="mb-3">
                    <%= formulario.label        :identificacion, class: 'form-label' %>
                    <%= formulario.text_field   :identificacion, class: 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= formulario.label            :password, class: 'form-label' %>
                    <%= formulario.password_field   :password, class: 'form-control' %>
                </div>

                <div class="mb-3 text-end">
                    <%= formulario.submit @texto_boton, class: 'btn btn-primary text-white' %>
                </div>
            <% end %>
        </div>
    </div>
</div>