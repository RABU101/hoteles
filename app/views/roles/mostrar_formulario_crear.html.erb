<h2>Registro de un Rol</h2>
<%= link_to "Ver listado de roles", roles_path, class: "btn btn-primary" %>
<%= form_with(model: @rol) do |formulario| %>
    <%= formulario.label        :rol, class: "form-label" %>
    <%= formulario.text_field   :rol, class: "form-control" %>
    <% if @rol.errors[:rol].any? %>
    <div>
        <%= @rol.errors[:rol].first %>
    </div>
    <% end %>    
    <%= link_to "Cancelar", roles_path, class: "btn btn-secondary" %>
    <%= formulario.submit "Registrar", class: "btn btn-primary" %>
<% end %>
