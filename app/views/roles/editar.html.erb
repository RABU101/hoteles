<h1>Editar</h1>

<%= form_with(model: @rol) do |formulario| %>
    <%= formulario.label        :rol %>
    <%= formulario.text_field   :rol %>
    <% if @rol.errors[:rol].any? %>
        <div>
            <%= @rol.errors[:rol].first %>
        </div>
    <% end %>
    <button>Cancelar</button>    
    <%= formulario.submit "Actualizar" %>
<% end %>