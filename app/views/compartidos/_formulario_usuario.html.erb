<!-- Varriables: p_parcial @usuario_actual-->

<div class="row justify-content-center">
    <div class="card w-50">
        <div class="card-body">

            <%= form_with(model: p_parcial) do |formulario| %>

                <div class="mb-3">
                    <%= formulario.label        :nombre, class: 'form-label' %>
                    <%= p_parcial.nombre %>
                    <%= formulario.text_field   :nombre, class: 'form-control' %>
                    <% if p_parcial.errors[:nombre].any? %>
                        <div class="alert alert-danger">
                            <%= p_parcial.errors[:nombre].first %>
                        </div>
                    <% end %>
                </div>

                <div class="mb-3">
                    <%= formulario.label        :identificacion, class: 'form-label' %>
                    <%= formulario.text_field   :identificacion, class: 'form-control' %>
                    <% if p_parcial.errors[:identificacion].any? %>
                        <div class="alert alert-danger"
                            <%= p_parcial.errors[:identificacion].first %>
                        </div>
                    <% end %>
                </div>

                <div class="mb-3">
                    <%= formulario.label        :telefono, class: 'form-label' %>
                    <%= formulario.text_field   :telefono, class: 'form-control' %>
                    <% if p_parcial.errors[:telefono].any? %>
                        <div class="alert alert-danger">
                            <%= p_parcial.errors[:telefono].first %>
                        </div>
                    <% end %>
                </div>

                <div class="mb-3">
                    <%= formulario.label            :password, class: 'form-label' %>
                    <%= formulario.password_field   :password, class: 'form-control' %>
                    <% if p_parcial.errors[:password].any? %>
                        <div class="alert alert-danger">
                            <%= p_parcial.errors[:password].first %>
                        </div>
                    <% end %>
                </div>

                <div class="mb-3">
                    <%= formulario.label            :password_confirmation, class: 'form-label' %>
                    <%= formulario.password_field   :password_confirmation, class: 'form-control' %>
                    <% if p_parcial.errors[:password_confirmation].any? %>
                        <div class="alert alert-danger">
                            <%= p_parcial.errors[:password_confirmation].first %>
                        </div>
                    <% end %>
                </div>
                <div class="mb-3 text-end">
                    <%= formulario.submit p_texto_boton, class: 'btn btn-primary text-white' %>
                </div>
            <% end %>
        </div>
    </div>
</div>